<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%# ブランド表示 %> 
  <a class="navbar-brand" href="/">tastylog</a>
  <%# トグル用のボタン（画面サイズが小さくなると表示される） %> 
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <%# 画面サイズが小さくなるとトグル用ボタンから展開される %> 
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%# 右側に最大マージンを設定する %> 
    <ul class="navbar-nav mr-auto">
      <%# Searchリンク %> 
      <li class="nav-item">
        <a class="nav-link" href="/search">Search</a>
      </li>
    </ul>
    <% if (locals.user) { %> 
      <%# ログイン状態の場合 %>
      <ul class="navbar-nav">
        <%# ドロップダウンリスト %> 
        <li class="nav-item dropdown">
          <%# ドロップダウンリストの表示ラベル %> 
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= locals.user.name || "(表示名なし)" %> 
          </a>
          <%# ドロップダウンリストの展開メニュー　親の右側を基準にして表示（デフォルトは左側が基準） %> 
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="#">ホーム</a>
            <a class="dropdown-item" href="#">My食レポ</a>
            <a class="dropdown-item" href="#">設定</a>
            <%# ログアウトボタン %> 
            <span class="dropdown-item">
              <form action="/account/logout" method="POST" class="form-inline my-2">
                <input type="submit" value="ログアウト" class="btn btn-outline-success my-2">
              </form>
            </span>
          </div>
        </li>
      </ul>
    <% } else { %>
      <%# 未ログイン状態の場合 %> 
      <%# ログインボタン %> 
      <a class="btn btn-outline-success my-2 my-sm-0 mr-2" href="/account/login" >ログイン</a>
      <%# 新規登録ボタン %> 
      <a class="btn btn-outline-success my-2 my-sm-0" href="#" >新規登録</a>  
    <% } %>
  </div>
</nav>